{
  "terminal.integrated.profiles.windows": {
    "PowerShell (Anaconda)": {
      "source": "PowerShell",
      "args": [
        "-ExecutionPolicy",
        "ByPass",
        "-NoExit",
        "-Command",
        "& 'C:\\Anaconda3\\shell\\condabin\\conda-hook.ps1' ; conda activate 'C:\\Anaconda3'"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell (Anaconda)",
  "window.title": "${rootName}${separator}${dirty}${activeEditorShort}${separator}${appName}",
  "editor.renderWhitespace": "all",
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.colorTheme": "Chromodynamics",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontFamily": "'Firicico', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italics (=Pacifico)
          // "entity.name.type.class", //class names
          "keyword", //import, export, return…
          //"support.class.builtin.js", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js", //class keyword
          "storage.type.function.js", // function keyword
          "storage.type.js", // Variable declarations
          "keyword.control.import", // Imports
          "keyword.control.from", // From-Keyword
          //"entity.name.type.js", // new … Expression
          "keyword.control.flow", // await
          "keyword.control.conditional", // if
          "keyword.control.loop", // for
          "keyword.operator.new" // new
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (My theme (Monokai dark) has some defaults I don't want to be in italics)
          "storage.type.function.arrow.ts",
          "storage.type.function.arrow.js",
          "invalid",
          "comment",
          "variable.parameter.url.css",
          "variable.parameter",
          "support.type",
          "storage.type.function.arrow.tsx",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json",
          "entity.name.type.class.js",
          "keyword.control.anchor.regexp",
          "punctuation.definition.string.end.ts",
          "entity.name.type.class.js",
          "keyword.key.toml"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "pydocs.style": "numpy",
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "python.unitTest.unittestEnabled": false,
  "python.unitTest.pyTestEnabled": true,
  "python.unitTest.nosetestsEnabled": false,
  "npm.autoDetect": "on",
  "coverage-gutters.ignoredPathGlobs": "**/{node_modules,venv,vendor,.tox,.pytest_cache,__pycache__}/**",
  "workbench.colorCustomizations": {
    "activityBar.background": "#0D4B33",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e7",
    "titleBar.activeBackground": "#0D4B33",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#0D4B33",
    "titleBar.inactiveForeground": "#e7e7e7"
  },
  "autoDocstring.docstringFormat": "numpy",
  // webdev specific
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "django-html": "html"
  },
  "color-highlight.markerType": "outline",
  "html.format.indentInnerHtml": false,
  "files.exclude": {
    "**/.ipynb_checkpoints": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "package-lock.json": true,
    ".coverage": true,
    "node_modules": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/.tox": true,
    "**/.eggs": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true
  },
  "editor.formatOnSave": true,
  "files.associations": {
    "requirements_dev.txt": "pip-requirements"
  },
  "sass.format.enabled": false,
  "python.languageServer": "Pylance",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic"
}
